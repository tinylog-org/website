{
    "name": "website",
    "scripts": {
        "build:dev": "hugo --cleanDestinationDir  --buildDrafts --environment development",
        "build:prod": "hugo --cleanDestinationDir --minify --environment production",
        "create:post": "scripts/create-post",
        "start:dev": "hugo server --port 80 --buildDrafts --environment development",
        "start:prod": "hugo server --port 80 --minify --environment production",
        "stylelint:check": "stylelint \"assets/sass/**/*.scss\"",
        "stylelint:fix": "stylelint \"assets/sass/**/*.scss\" --fix",
        "eslint:check": "eslint \"assets/typescript/**/*.ts\"",
        "eslint:fix": "eslint \"assets/typescript/**/*.ts\" --fix",
        "cspell:check": "cspell \"*.md\" \"content/**/*.md\" --no-progress --no-summary --config \".cspell.yaml\"",
        "all:check": "npm-run-all stylelint:check eslint:check cspell:check --continue-on-error",
        "all:fix": "npm-run-all stylelint:fix eslint:fix cspell:check --continue-on-error"
    },
    "dependencies": {
        "bootstrap": "5.2.2",
        "bootstrap-icons": "1.9.1"
    },
    "devDependencies": {
        "@cspell/dict-de-de": "3.0.0",
        "@types/bootstrap": "5.2.5",
        "@typescript-eslint/eslint-plugin": "5.41.0",
        "@typescript-eslint/parser": "5.41.0",
        "cspell": "6.12.0",
        "eslint": "8.26.0",
        "hugo-extended": "0.104.3",
        "npm-run-all": "4.1.5",
        "stylelint": "14.14.0",
        "stylelint-config-idiomatic-order": "9.0.0",
        "stylelint-config-standard-scss": "6.0.0",
        "typescript": "4.8.4"
    }
}
