{
    "name": "website",
    "scripts": {
        "build:dev": "hugo --cleanDestinationDir  --buildDrafts --environment development",
        "build:prod": "hugo --cleanDestinationDir --minify --environment production",
        "create:post": "scripts/create-post",
        "cspell:check": "cspell \"*.md\" \"content/**/*.md\" --no-progress --no-summary --config \".cspell.yaml\"",
        "eslint:check": "eslint eslint.config.mjs \"assets/typescript/**/*.ts\"",
        "eslint:fix": "eslint eslint.config.mjs \"assets/typescript/**/*.ts\" --fix",
        "start:dev": "hugo server --port 80 --buildDrafts --environment development",
        "start:prod": "hugo server --port 80 --minify --environment production",
        "stylelint:check": "stylelint \"assets/sass/**/*.scss\"",
        "stylelint:fix": "stylelint \"assets/sass/**/*.scss\" --fix"
    },
    "dependencies": {
        "bootstrap": "5.3.5",
        "bootstrap-icons": "1.11.3"
    },
    "devDependencies": {
        "@cspell/dict-de-de": "4.1.0",
        "@cspell/dict-java": "5.0.11",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.25.1",
        "@stylistic/eslint-plugin": "4.2.0",
        "@types/bootstrap": "5.2.10",
        "cspell": "8.19.2",
        "eslint": "9.25.1",
        "hugo-extended": "0.147.0",
        "stylelint": "16.19.1",
        "stylelint-config-idiomatic-order": "10.0.0",
        "stylelint-config-standard-scss": "14.0.0",
        "typescript": "5.8.3",
        "typescript-eslint": "8.31.0"
    }
}
