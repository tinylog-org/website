---
import { runHighlighterWithAstro } from '@astrojs/prism/dist/highlighter'

interface Props {
    language: string
    code: string
}

const { language, code } = Astro.props
const { classLanguage, html } = runHighlighterWithAstro(language, code)
---

<pre data-language={language}><code class={classLanguage} data-language={language} set:html={html} /><button class="copy-button" type="button" title="Copy to clipboard" data-bs-toggle="tooltip" /></pre>
