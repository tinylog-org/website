---
import { getDefaultVersion, resolveFullVersion } from '../composables/version'
import type { Version } from '../types/version.ts'

interface Props {
    version?: Version
}

const { version = getDefaultVersion(Astro.url) } = Astro.props
const currentVersion = resolveFullVersion(version, 'current')
const previewVersion = resolveFullVersion(version, 'preview')
---

{currentVersion && previewVersion && currentVersion !== previewVersion && <slot />}
