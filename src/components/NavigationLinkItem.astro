---
import { isInPathname } from '../composables/navigation'
import type { NavigationEntry } from '../types/navigation'

interface Props {
    entry: NavigationEntry
}

const { entry } = Astro.props
const active = isInPathname(Astro.url, entry)
---

<li class="nav-item">
    <a href={entry.url} class:list={['nav-link', { active }]}>{entry.title}</a>
</li>
